<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singer" class="com.gonzajf.spring.ch3.Singer"
          scope="prototype"/>
    <bean id="abstractLookupBean"
          class="com.gonzajf.spring.ch3.AbstractLookupDemoBean">
        <lookup-method name="getSinger" bean="singer"/>
    </bean>
    <bean id="standardLookupBean"
          class="com.gonzajf.spring.ch3.StandardLookupDemoBean">
        <property name="singer" ref="singer"/>
    </bean>

</beans>